package entradadatosscaner;

/**
 *
 * @author PEDRO
 */

import java.util.*;

public class EntradaDatosScaner {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        
        String CapturaNombre = null;
        String CapturaCorreo = null;
        String CapturaDireccion= null;
        int    CapturaEdad = 0;
        Scanner scanner = new Scanner (System.in);
        
        System.out.println("Introduce tu nombre:");
        CapturaNombre = scanner.nextLine();
        System.out.println("Introduce tu coreo:");
        CapturaCorreo = scanner.nextLine();
        System.out.println("Introduce tu direccion:");
        CapturaDireccion = scanner.nextLine();
        System.out.println("Introduce tu edad:");
        CapturaEdad = scanner.nextInt();
        
        while(CapturaNombre !=null) {
            System.out.println("Nombre:"+" "+CapturaNombre);
            System.out.println("Correo:"+" "+CapturaCorreo);
            System.out.println("Direccion:"+" "+CapturaDireccion);
            System.out.println("Edad:"+" "+CapturaEdad);
            CapturaNombre = scanner.nextLine();
            CapturaCorreo = scanner.nextLine();
            CapturaDireccion = scanner.nextLine();
            CapturaEdad = scanner.nextInt();
        }
        
    }
    
}
